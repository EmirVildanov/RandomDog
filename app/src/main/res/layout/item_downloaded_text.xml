<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <data>
        <variable
            name="downloadedTextItem"
            type="com.example.randomdog.data.DownloadedTextData" />
        <variable
            name="clickListener"
            type="com.example.randomdog.ui.settings.DownloadedTextListener"/>
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="@{() -> clickListener.onClick(downloadedTextItem)}">

        <TextView
            android:id="@+id/inventoryItemTextView"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:gravity="center"
            android:text="@{downloadedTextItem.text}"
            android:textSize="13sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="InventoryItem" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>